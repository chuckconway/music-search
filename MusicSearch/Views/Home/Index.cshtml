@model List<MusicSearch.Core.Data.Schema.SongAndArtist>
@{
    ViewBag.Title = "Search Songs";
}


    <div class="row">
        <div class="col-xs-12">

            <form method="POST" class="col-md-offset-2 col-md-8 col-md-offset-2 margin-bottom-40">
                <div>
                    <div class="input-group">
                        <input type="text" class="form-control ng-pristine ng-invalid ng-invalid-required" name="search" placeholder="Search" />
                        <span class="input-group-btn"><button type="submit" class="btn btn-u">Search</button></span>
                    </div>
                </div>
            </form>


            @if (Model != null)
            {
                if (Model.Count > 0)
                {

                        <p style="clear:both;"><strong>@Model.Count</strong> matches were found</p>


                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Artist</th>
                                    <th>Title</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var m in Model)
                            {
                                    <tr>
                                        <td>@m.Artist</td>
                                        <td>@m.Name</td>
                                    </tr>
                            }
                            </tbody>
                        </table>
                        }
                        else
                        {
                        <p>No results were found</p>
                        }
                        }

                    </div>
    </div>
